{
    "name": "larafony/skeleton",
    "description": "Larafony Framework Application Skeleton",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.5",
        "larafony/core": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"copy('.env.example', '.env');\""
        ],
        "build:notes": "php8.5 bin/larafony build:notes"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "repositories": {
        "local": {
            "type": "path",
            "url": "../framework",
            "options": {
                "symlink": true
            }
        }
    }
}
