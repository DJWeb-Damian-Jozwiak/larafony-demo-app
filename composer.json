{
    "name": "larafony/skeleton",
    "description": "Larafony Framework Application Skeleton",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.5",
        "larafony/core": "^2.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"copy('.env.example', '.env');\""
        ],
        "build:notes": "php8.5 bin/larafony build:notes"
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^7.3"
    }
}
